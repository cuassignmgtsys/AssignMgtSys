<% include partials/header.ejs %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="submit-work-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="lecturer_code" id="lecturer-code" placeholder="Lecturer Code" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="date" class="form-control" name="mark_submit_date" id="mark-submit-date" placeholder="Mark Submit Date" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="mark_score" id="mark-score" placeholder="Mark Score" required>
                </div>                
            </div>
            <div>
                <div class="col-md-12">
                    <label for="mark-file"><b>Mark File</b?</label><br>
                    <input type="file" name="mark_file" id="mark-file" class="" required>
                </div>
            </div>            
            <button type="submit" class="btn btn-primary float-right">Submit Mark File</button>
        </form>
    </div>
</div>
</body>
</html>