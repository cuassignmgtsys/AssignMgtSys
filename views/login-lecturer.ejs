<% include partials/header.ejs %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <br><br>
        <p><font size="5"><u><b>LECTURER LOGIN</b></u></font></p>
       <form class="login-lecturer-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    Lecturer Email:      <input type="text" class="form-control" name="email" id="email" placeholder="Email" required>
                </div>                
                <div class="form-group col-md-4">
                    Lecturer Password: <input type="password" class="form-control" name="password" id="password" placeholder="Password" required>
                </div>                      
            </div>           
            <button type="submit" class="btn btn-primary float-right" style="color:yellow">Lecturer Login</button>
        </form> 
        <br>
        <p class="text-center"><a href="/register_lecturer" style="color:green">No account yet? Click to Register a LECTURER Account</a></p> 
        <hr width="100%" align="left" color='black' noshade> 
    </div>
</div>
</body>
</html>    